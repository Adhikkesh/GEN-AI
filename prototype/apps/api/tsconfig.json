{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@repo/typescript-config/base.json",

  "compilerOptions": {
    "module": "NodeNext", 
    "moduleResolution": "NodeNext",
    "target": "ES2022", 
    "lib": ["ES2022"], 

    "rootDir": "./src", 
    "outDir": "./dist", 
    "sourceMap": true, 
    
    "strict": true, 
    "esModuleInterop": true, 
    "noUncheckedIndexedAccess": true, 
    "resolveJsonModule": true, 
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}